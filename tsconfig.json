{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".", // enable relative resolution from root
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "shaders", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
